@model IEnumerable<RichyProject.Models.YourMessage>

@{
    ViewData["Title"] = "ListOfMessages";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!-- ======= Header ======= -->
<header id="header" class="fixed-top ">
    <div class="container d-flex align-items-center">

        @*<h1 class="logo me-auto"><a href="index.html">Rich-Graphics</a></h1>*@
        <!-- Uncomment below if you prefer to use an image logo -->
        <a asp-action="Index" asp-controller="Home" class="logo me-auto"><img src="~/img/logo/Richlogo.jpg" alt="" class="img-fluid">Rich Graphics</a>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active text-primary" asp-action="Index" asp-controller="Home">Home Page</a></li>

            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

    </div>
</header><!-- End Header -->
<br>
<br>
<br>
<h1 class="text-center">List Of Messages</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td clas="text-break">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td clas="text-break">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td clas="text-break">
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
